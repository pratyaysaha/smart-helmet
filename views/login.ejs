<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='/signup.css'/>
    <title>Login</title>
</head>
<body>
    <div class="coloring"></div>
    <%-include('../views/header')%>
    <div class="content-container">
        <div class="content-left">
            <div class="img-wrapper">
                <img src="/imgLogin.svg" class="login-img"/>
            </div>
        </div>
        <div class="content-right">
            <div class="wrapper">
                <div class="error-message">

                </div>
                <div class="input-field">
                    <i class="fas fa-at"></i>
                    <input class="input email" type="text" placeholder="Email"/>
                </div>
                <div class="input-field">
                    <i class="fas fa-key"></i>
                    <input class="input password" type="password" placeholder="Password"/>
                    <span class="password-show" onclick="eyechange(this)">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <div class="button-container">
                    <div class="button" onclick="submit(this)">
                        Login
                    </div>
                    <div class="loading">
                        <i class="fas fa-circle-notch fa-spin"></i>
                    </div>
                </div>
                <div class="account-create">
                    <div class="label" onclick="location.assign(`${window.location.origin}/signup`)">
                        Create an account
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src='/login.js'></script>
</html>